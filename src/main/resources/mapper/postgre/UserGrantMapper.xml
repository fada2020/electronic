<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jp.co.info.ais.ops.mapper.postgre.UserGrantMapper">

	<!--リスト表示  -->
	<select id="selectGrantInfo" parameterType="String" resultType="String">
		SELECT
			enable
		FROM tbl_usergrant
		WHERE loginuser = #{userid}
	</select>

	<!--リスト表示  -->
	<select id="usermasterList" resultType="jp.co.info.ais.ops.domain.UserMaster">
		SELECT
			loginuser,
			enable
		FROM tbl_usergrant
		WHERE loginuser in
       <foreach item="user" index="index" collection="users" open="(" separator="," close=")">#{user.loginuser}</foreach>
	</select>

	<!--権限保存  -->
	<insert id ="saveEnable" parameterType= "java.util.List" >
			insert into tbl_usergrant
		    (
			    loginuser,
			    enable
		    )
		    VALUES
		<foreach item="user" index="index" collection="users" separator=",">
		    (
			    #{user.loginuser},
			    #{user.enable}
		    )
		</foreach>
	</insert >

	<!--権限削除  -->
	<delete id="deleteUserMaster" parameterType= "java.util.List">
    	DELETE FROM tbl_usergrant
    	WHERE loginuser in
    	<foreach item="user" index="index" collection="users" open="(" separator="," close=")">
    		#{user.loginuser}
  		</foreach>
    </delete>
 </mapper>
